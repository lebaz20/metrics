{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["ESNext"],
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "../dist/api"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
  